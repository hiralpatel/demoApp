<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.JobListActivity"></activity>
        <activity android:name=".activities.JobDetailsActivity"></activity>
        <activity
            android:name=".activities.JobApplyOnlineActivity"
            android:label="Apply"></activity>
        <activity
            android:name=".activities.JobOpportunityActivity"
            android:label="Send me this opportunity"></activity>

    </application>

</manifest>